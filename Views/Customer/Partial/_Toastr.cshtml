<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

@* REGISTER FORM *@
@if (TempData["RegisterError"] != null)
{

    @if (TempData["RegisterError"]!.ToString() == "registerEmailExists")
    {
        
        <script type="text/javascript">
            toastr.warning('Email already exists');
        </script>
    }
    else if (TempData["RegisterError"]!.ToString() == "registerPassword")
    {
        
        <script type="text/javascript">
            toastr.error('Passwords do not match');
        </script>
    }
    else if (TempData["RegisterError"]!.ToString() == "registerEmail")
    {
        <script type="text/javascript">
            toastr.error('Invalid form data, Try again.');
        </script>
    }
    else if (TempData["RegisterError"]!.ToString() == "registerName")
    {
        <script type="text/javascript">
            toastr.error('Name is too short');
        </script>
    }
    else{
         <script type="text/javascript">
            toastr.error('Details cannot be empty');
        </script>
    }
}
else if(TempData["RegisterSuccess"] != null)
{
    <script type="text/javascript">
        toastr.success('Account created successfully!');
    </script>
}
else if (TempData["LoginError"] != null) @* LOGIN FORM *@
{
    @if (TempData["LoginError"]!.ToString() == "loginError")
    {
        <script type="text/javascript">
            toastr.error('Email/Password incorrect');
        </script>
    }
    else if (TempData["LoginError"]!.ToString() == "loginEmpty")
    {
        <script type="text/javascript">
            toastr.error('Details cannot be empty');
        </script>
    }
}



<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Kick X &mdash; Store</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700"> 
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>

    <link rel="stylesheet" href="~/Templates/Product_Page/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/Templates/Product_Page/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Templates/Product_Page/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Templates/Product_Page/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Templates/Product_Page/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Templates/Product_Page/css/owl.theme.default.min.css">


    <link rel="stylesheet" href="~/Templates/Product_Page/css/aos.css">

    <link rel="stylesheet" href="~/Templates/Product_Page/css/style.css">

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" defer></script>
    
  </head>
  <body>
  
  <!-- Upper Nav -->
  <div class="site-wrap">
    <header class="site-navbar" role="banner">
      <div class="site-navbar-top">
        <div class="container">
          <div class="row align-items-center">

            <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
              <form id="searchForm" class="site-block-top-search"
              asp-action="StoreSearch"
              asp-controller="Customer"
              method="get">
                <span class="icon icon-search2"></span>
                <input type="text" name="searchInput" id="searchInput" class="form-control border-0" placeholder="Search">
              </form>
            </div>

            <!-- Logo Middle -->
            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
              <div class="site-logo">
                <a href="/Customer/Home" class="js-logo-clone">Kick X</a>
              </div>
            </div>

            <!-- Login / Cart Options -->
            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
              <div class="site-top-icons">
                <ul>
                  <li><a href="/Customer/Profile"><span class="icon icon-person"></span></a></li>
                  @* <li><a href="#"><span class="icon icon-heart-o"></span></a></li> *@
                  <li>
                    <a href="/Customer/Cart" class="site-cart">
                      <span class="icon icon-shopping_cart"></span>
                      @if(User?.Identity?.IsAuthenticated == true)
                      { <span class="count">2</span> }
                    </a>
                  </li> 
                  <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                </ul>
              </div> 
            </div>

          </div>
        </div>
      </div> 

      <!-- NAV BAR -->
      <nav class="site-navigation text-right text-md-center" role="navigation">
        <div class="container">
          <ul class="site-menu js-clone-nav d-none d-md-block">

            <li class="@(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")">
              <a href="/Customer/Home">Home</a>
            </li>
            <li class="@(ViewData["ActivePage"]?.ToString() == "Store" ? "active" : "") has-children">
              <a href="/Customer/Store">Store</a>
              <ul class="dropdown">
                <li><a href="@Url.Action("StoreSearch","Customer", new{searchInput = "Nike"})">Nike</a></li>
                <li><a href="@Url.Action("StoreSearch","Customer", new{searchInput = "Adidas"})">Adidas</a></li>
                <li><a href="@Url.Action("StoreSearch","Customer", new{searchInput = "Puma"})">Puma</a></li>
                <li><a href="@Url.Action("Store","Customer", new{searchInput = ""})">Show All</a></li>
              </ul>
            </li>
            @if(User?.Identity?.IsAuthenticated == true){
            <li class="@(ViewData["ActivePage"]?.ToString() == "Order" ? "active" : "")">
              <a href="/Customer/Order">Orders</a>
            </li>
            }
            <li class="@(ViewData["ActivePage"]?.ToString() == "About" ? "active" : "")">
              <a href="/Customer/About">About</a>
            </li>

          </ul>
        </div>
      </nav>
    </header>

    @RenderBody();

    <!-- Footer -->
    <footer class="site-footer border-top">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="row">
              <div class="col-md-12">
                <h3 class="footer-heading mb-4">Navigations</h3>
              </div>
              <div class="col-md-6 col-lg-4">
                <ul class="list-unstyled">
                  <li><a href="#">Sell online</a></li>
                  <li><a href="#">Features</a></li>
                  <li><a href="#">Shopping cart</a></li>
                  <li><a href="#">Store builder</a></li>
                </ul>
              </div>
              <div class="col-md-6 col-lg-4">
                <ul class="list-unstyled">
                  <li><a href="#">Mobile commerce</a></li>
                  <li><a href="#">Dropshipping</a></li>
                  <li><a href="#">Website development</a></li>
                </ul>
              </div>
              <div class="col-md-6 col-lg-4">
                <ul class="list-unstyled">
                  <li><a href="#">Point of sale</a></li>
                  <li><a href="#">Hardware</a></li>
                  <li><a href="#">Software</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
            <h3 class="footer-heading mb-4">Promo</h3>
            <a href="#" class="block-6">
              <img src="~/Templates/Product_Page/images/hero_1.jpg" alt="Image placeholder" class="img-fluid rounded mb-4">
              <h3 class="font-weight-light  mb-0">Finding Your Perfect Shoes</h3>
              <p>Promo from  October 15 &mdash; 25, 2024</p>
            </a>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="block-5 mb-5">
              <h3 class="footer-heading mb-4">Contact Info</h3>
              <ul class="list-unstyled">
                <li class="address">Mumbai, MH, India</li>
                <li class="phone"><a href="tel://23923929210">+91 9870281278</a></li>
                <li class="email">omberde1@gmail.com</li>
              </ul>
            </div>

            <div class="block-7">
              <form action="#" method="post">
                <label for="email_subscribe" class="footer-heading">Subscribe</label>
                <div class="form-group">
                  <input type="text" class="form-control py-4" id="email_subscribe" placeholder="Email">
                  <input type="submit" class="btn btn-sm btn-primary" value="Send">
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="row pt-5 mt-5 text-center">
          <div class="col-md-12">
            <p>

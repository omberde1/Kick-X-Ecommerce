@{
    ViewData["Title"] = "Add - Product";
}

    <div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
        <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
            <div class="flex flex-col overflow-y-auto md:flex-row">
                <div class="h-32 md:h-auto md:w-1/2">
                    <img aria-hidden="true" class="object-cover w-full h-full dark:hidden"
                        src="~/Templates/Admin_Dashboard/img/create-account-office-2.jpg" alt="Shoes" />
                    <img aria-hidden="true" class="hidden object-cover w-full h-full dark:block"
                        src="~/Templates/Admin_Dashboard/img/create-account-office-dark-2.jpg" alt="Shoes" />
                </div>

                <form class="flex items-center justify-center p-6 sm:p-12 md:w-1/2" method="post">
                    <div class="w-full">
                        <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
                            Delete Product
                        </h1>

                        <label class="block text-sm">
                            <span class="text-gray-700 dark:text-gray-400">Product ID</span>
                            <input type="text" name="productId"
                                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                placeholder="ID..." value="@Model.product_id" readonly />
                        </label>
                        <label class="block text-sm">
                            <span class="text-gray-700 dark:text-gray-400">Product Image</span>
                            <img class="object-cover w-full h-full" 
                            src="~/img/Product_Img/@Model.product_image" 
                            alt="error"loading="lazy"/>
                        </label>
                        <label class="block text-sm">
                            <span class="text-gray-700 dark:text-gray-400">Product Name</span>
                            <input type="text"
                                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                placeholder="Name..." value="@Model.product_name" disabled />
                        </label>
                        <label class="block text-sm">
                            <span class="text-gray-700 dark:text-gray-400">Product Description</span>
                            <input type="text"
                                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                placeholder="Description..." value="@Model.product_description" disabled />
                        </label>
                        <label class="block text-sm">
                            <span class="text-gray-700 dark:text-gray-400">Product Price</span>
                            <input type="text" 
                                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                placeholder="Price..." value="@Model.product_price" disabled />
                        </label>
                        <label class="block text-sm">
                            <span class="text-gray-700 dark:text-gray-400">Category</span>
                            <input type="text"
                                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                                placeholder="Category..." value="@ViewBag.category" disabled />
                        </label>

                        <!-- You should use a button here, as the anchor is only used for the example  -->
                        <input type="submit" value="Delete" style="cursor: pointer;"
                            class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" />
                        <a href="@Url.Action("Product", "Admin")" style="cursor: pointer;"
                            class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                        Back to List</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
